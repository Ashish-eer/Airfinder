extends layout

block content
  #banner.page-header
    .row
      .col-lg-12
        h1 Blog
        small Stay updated with the latest travel stories and tips!

  .row
    .col-xs-12
      each post in blogPosts
        .post
          h2= post.title
          p= post.date
          p= post.summary
          a(href=`/blog/${post.id}`) 
